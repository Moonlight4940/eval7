{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ service.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ service.dtCreation ? service.dtCreation|date('d-m-Y') : '' }}</td>
            </tr>
             <tr>
                <th>Employés</th>
                <td>
                    <ul>
                        {% for employe in service.employes %}
                            <li>{{ employe.prenom }} {{ employe.nom }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_service_index') }}">Retour à la liste</a>

    <a href="{{ path('app_service_edit', {'id': service.id}) }}">editer</a>

    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
